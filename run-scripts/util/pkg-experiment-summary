#!/bin/bash
WORK_DIR=/proj/midonet/lattest
EXPERIMENTS=~/output/batch

rm -f -r $WORK_DIR/scratch
mkdir $WORK_DIR/scratch

#copy jmx logs
./pdsh-jmx cp -r /usr/share/jmxtrans/jmxtrans-251/logs $WORK_DIR/scratch/jmx

#copy nmon logs
mkdir $WORK_DIR/scratch/nmon
./pdsh-cluster cp -r /var/log/nmon/. $WORK_DIR/scratch/nmon

#copy experiments
cp -r $EXPERIMENTS $WORK_DIR/scratch/exp

#package
tar -czvf $WORK_DIR/$1.tgz -C $WORK_DIR/scratch .
