#!/bin/bash

SCRIPT_DIR=$( cd $( dirname "${BASH_SOURCE[0]}" ) && pwd )

WORK_DIR=/proj/midonet/lattest
BENCHMARK_BATCH_OUTPUT=$SCRIPT_DIR/output/batch

#clear jmx logs
$SCRIPT_DIR/../util/pdsh-jmx "kill \$(pgrep -f jmxtrans)"
$SCRIPT_DIR/../util/pdsh-jmx rm /usr/share/jmxtrans/jmxtrans-251/logs/*
$SCRIPT_DIR/../util/pdsh-jmx /proj/midonet/lattest/jmx/start-jmx-daemon.sh

#clear nmon logs
$SCRIPT_DIR/../util/pdsh-cluster pkill -USR2 nmon
$SCRIPT_DIR/../util/pdsh-cluster rm /var/log/nmon/*
$SCRIPT_DIR/../util/pdsh-cluster nmon -f -s 10 -r "cluster$3" -c 10000000 -m /var/log/nmon

#remove batch experiments
rm -r $BENCHMARK_BATCH_OUTPUT/*
